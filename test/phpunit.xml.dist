<?xml version="1.0" encoding="UTF-8"?>
<!--
	OpenTHC PHPUnit Configuration File
-->
<phpunit
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd"
	backupGlobals="false"
	backupStaticAttributes="false"
	bootstrap="../boot.php"
	cacheResult="false"
	colors="false"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	processIsolation="false"
	stopOnError="true"
	stopOnFailure="true"
	stopOnRisky="true"
	timeoutForSmallTests="2"
	timeoutForMediumTests="8"
	timeoutForLargeTests="32"
	verbose="false"
	>

	<php>
		<const name="DEBUG_HTTP" value="false" />

		<!--
			Put the URL of your SSO Instance Here
			eg: https://sso.openthc.example.com
		 -->
		<const name="OPENTHC_TEST_ORIGIN" value="https://sso.openthc.example.com" />

		<const name="OPENTHC_TEST_CONTACT_A" value="test+a@openthc.example.com" />
		<const name="OPENTHC_TEST_CONTACT_B" value="test+b@openthc.example.com" />
		<const name="OPENTHC_TEST_CONTACT_C" value="test+c@openthc.example.com" />

		<const name="OPENTHC_TEST_CONTACT_PASSWORD" value="passweed" />

		<const name="OPENTHC_TEST_CONTACT_PHONE" value="+18559769333" />

		<const name="OPENTHC_TEST_WEBDRIVER_URL" value="" />

	</php>

	<coverage />

	<testsuites>
		<testsuite name="All">
			<directory>.</directory>
		</testsuite>
	</testsuites>

</phpunit>
