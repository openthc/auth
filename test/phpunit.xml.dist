<?xml version="1.0" encoding="UTF-8"?>
<!--
	OpenTHC PHPUnit Configuration File
-->
<phpunit
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd"
	backupGlobals="false"
	backupStaticAttributes="false"
	bootstrap="boot.php"
	cacheResult="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	processIsolation="false"
	timeoutForSmallTests="4"
	timeoutForMediumTests="16"
	timeoutForLargeTests="32"
	verbose="false"
	stopOnError="true"
	stopOnFailure="true"
	stopOnRisky="true"
	>

	<coverage />

	<php>
		<env name="debug-http" value="false" />

		<env name="OPENTHC_TEST_WEBDRIVER_URL" value="" />

		<env name="OPENTHC_TEST_CONTACT_PASSWORD" value="" />
		<env name="OPENTHC_TEST_CONTACT" value="" />
		<env name="OPENTHC_TEST_CONTACT_USERNAME" value="" />
		<env name="OPENTHC_TEST_ORIGIN" value="" />
		<env name="OPENTHC_TEST_CONTACT_PHONE" value="" />
	</php>

	<testsuites>
		<testsuite name="All">
			<directory>.</directory>
		</testsuite>
	</testsuites>

</phpunit>
